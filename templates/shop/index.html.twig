</div>
</div>

<!-- Separator -->
<hr class="bg-primary" align="center"/>
<!-- Cards -->
<div class="row justify-content-around">

{%for product in allProducts %}
  <div class="card" style="width: 20rem;">
    <img src={{ product.image }} class="card-img-top" alt="Article 1" style="height: 17rem;">
    <div class="card-body">
      <h5 class="card-title">{{ product.name }}</h5>
      <p class="card-text">{{ product.description }}</p>
      <p class="card-text" text-align="right"><strong>{{ product.price }}€</strong></p>
      <a href="#" class="btn btn-primary">Buy</a>
    </div>
  </div>
{% endfor %}

